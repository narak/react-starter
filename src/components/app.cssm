/* importing colors */
@value colors: "./colors.cssm";
@value base01 from colors;

:global(html),
:global(body) {
    margin: 0;
    padding: 0;
    background: base01;
    font-family: 'Montserrat', serif;
}

:global(*),
:global(* *) {
    box-sizing: border-box;
}

.app {
    margin: 10px;
    padding: 10px;
}

@media only screen and (max-width: 800px) {
    .app {
        margin: 0;
        padding: 0;
    }
}
